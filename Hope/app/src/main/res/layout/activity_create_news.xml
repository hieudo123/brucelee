<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:background="@color/text_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar">
        </include>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:padding="@dimen/w10"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_createat"
                   android:textSize="@dimen/w16"
                   android:text="Created at: "
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <TextView
                   android:gravity="right"
                   android:textColor="@color/bg_sigin"
                   android:textSize="@dimen/w16"
                   android:text="@string/share"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>

           <LinearLayout
               android:background="@color/text_white"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/w10"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:layout_marginTop="@dimen/w10"
                   android:id="@+id/tv_createdby"
                   android:textSize="@dimen/w16"
                   android:text="Created by: "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:background="@drawable/bg_edittext"
                   android:id="@+id/tv_title"
                   android:padding="@dimen/w10"
                   android:layout_marginTop="@dimen/w10"
                   android:hint="@string/title"
                   android:inputType="text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginTop="@dimen/w10"
                   android:textSize="@dimen/w20"
                   android:hint="@string/content"
                   android:id="@+id/et_content"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/w10"
                   android:background="@color/text_white"
                   android:inputType="textMultiLine" />

           </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_image"
                    android:layout_marginTop="@dimen/w10"
                    android:id="@+id/iv_news_image"
                    android:layout_width="@dimen/w200"
                    android:layout_height="@dimen/w200" />
            </LinearLayout>
           <LinearLayout
               android:gravity="center_horizontal"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_margin="@dimen/w5"
                   android:scaleType="fitXY"
                   android:background="@drawable/ic_image"
                   android:id="@+id/iv_news_image1"
                   android:layout_width="@dimen/w100"
                   android:layout_height="@dimen/w100" />
               <ImageView
                   android:layout_margin="@dimen/w5"
                   android:scaleType="fitXY"
                   android:background="@drawable/ic_image"
                   android:id="@+id/iv_news_image2"
                   android:layout_width="@dimen/w100"
                   android:layout_height="@dimen/w100"/>
           </LinearLayout>
       </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/w10"
        android:layout_marginBottom="@dimen/w20"
        android:src="@drawable/ic_image"
        android:id="@+id/fbtn_addimage"
        android:backgroundTint="@color/text_white"
        app:layout_anchorGravity="bottom|right|end"/>
</android.support.design.widget.CoordinatorLayout>