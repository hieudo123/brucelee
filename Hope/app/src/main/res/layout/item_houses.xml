<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_margin="@dimen/w10"
    card_view:cardMaxElevation="@dimen/w10"
    card_view:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<TextView-->
            <!--android:textColor="@color/text_white"-->
            <!--android:background="@color/bg_sigin"-->
            <!--android:padding="@dimen/w5"-->

            <!--android:id="@+id/tv_createdby"-->
            <!--android:textSize="@dimen/w16"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/createdby"/>-->
        <ImageView

            android:id="@+id/iv_news"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:src="@drawable/background2"
            android:layout_height="@dimen/w248"/>

        <LinearLayout
            android:padding="@dimen/w10"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/w5"
                android:id="@+id/tv_price_house"
                android:textSize="@dimen/w20"
                android:textColor="@color/bg_sigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/w5"
                android:id="@+id/tv_address_house"
                android:textSize="@dimen/w16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"/>

            <View
                android:layout_marginTop="@dimen/w10"
                android:background="@color/login_button"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:layout_marginTop="@dimen/w5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="right"
                    android:textSize="@dimen/w15"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22:00 15/4/2019"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

