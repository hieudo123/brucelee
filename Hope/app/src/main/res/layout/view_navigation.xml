<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/text_white"
        android:layout_width="280dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_profile"
            android:background="@color/bg_sigin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w200">
            <ImageView
                android:id="@+id/iv_avt"
                android:layout_width="@dimen/w100"
                android:layout_height="@dimen/w100"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_account" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w20"
                android:textColor="@color/text_dray"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/w20"
                android:layout_marginBottom="@dimen/w20"
                android:layout_toEndOf="@+id/iv_avt"
                android:text="Đỗ Minh Hiếu" />
        </RelativeLayout>
        <LinearLayout
            android:layout_margin="@dimen/w10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_home_nav"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:padding="@dimen/w5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp18"
                android:text="@string/home"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/w10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_notifi"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:padding="@dimen/w5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/w16"
                android:text="@string/notifi"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/w10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_heart"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:padding="@dimen/w5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/w16"
                android:text="@string/favorite"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/w10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="wrap_content"
                android:background="@drawable/ic_fire"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:padding="@dimen/w5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/w16"
                android:text="@string/mostview"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/bg_sigin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w2"></View>
        <LinearLayout
            android:layout_margin="@dimen/w5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_exit"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:padding="@dimen/w5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp18"
                android:text="@string/logout"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>