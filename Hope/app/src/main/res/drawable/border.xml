<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#e7f4fa"
                android:endColor="#eaeaea"
                android:centerColor="#fff3ff"
                android:angle="360" />

            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#bae9ff"
                android:endColor="#eaeaea"
                android:centerColor="#fcc9fc"
                android:angle="360" />

            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>